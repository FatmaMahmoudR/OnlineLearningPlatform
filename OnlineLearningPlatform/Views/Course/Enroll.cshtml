@model OnlineLearningPlatform.Models.Course

@{
    ViewData["Title"] = "Enroll in Course";
}

@if (Model != null)
{
    <h2>@Model.Name</h2> // course name
    <p>@Model.Description</p>  //course description

    @if (!string.IsNullOrEmpty(ViewBag.Message))  // message whether you are enrolled before or succesfully enrolled
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    <a href="@Url.Action("Index", "Course")">Back to Courses</a>

}
else
{
    <p>Error: Course data is missing.</p>
}
